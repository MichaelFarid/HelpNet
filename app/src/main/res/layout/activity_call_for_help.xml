<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_call_for_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.micha.example.ui.activities.CallForHelp">

    <Button
        android:text="Other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idk_b"
        android:layout_marginTop="28dp"
        android:onClick="chatRoom (CallForHelp)"
        android:layout_below="@+id/od_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/cpr_aed_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cpr_aed_b"
        tools:text="@string/cpr_aed_button"
        android:layout_marginTop="35dp"
        android:onClick="requestAid (CallForHelp)"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/epi_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/epi_b"
        android:layout_marginTop="24dp"
        android:onClick="requestAid (CallForHelp)"
        android:layout_below="@+id/cpr_aed_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/insulin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ins_b"
        android:layout_marginTop="33dp"
        android:onClick="requestAid (CallForHelp)"
        android:layout_below="@+id/epi_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/od_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/od_b"
        android:onClick="requestAid (CallForHelp)"
        android:layout_below="@+id/ins_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
